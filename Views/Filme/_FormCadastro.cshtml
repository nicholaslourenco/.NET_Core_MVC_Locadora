@model Filme
<div class="row justify-content-md-center">
    <form asp-action="Cadastro" method="POST" class="col-md-4" enctype="multipart/form-data">
        <input type="hidden" asp-for="Id" />
        <div class="form-group">
            <label asp-for="Nome">Titulo</label>
            <input asp-for="Nome" class="form-control" required/>
        </div>
        <div class="form-group">
            <label asp-for="Genero">Gênero</label>
            <input asp-for="Genero" class="form-control" required/>
        </div>
        <div>
            <label asp-for="Classificacao">Classificação Indicativa</label>
            <input asp-for="Classificacao" required/>
        </div>
            <label asp-for="CaminhoImagem">Cartaz do Filme</label>
            <input type="file" asp-for="CaminhoImagem" required/>
        <input type="submit" value="Salvar" class="btn btn-primary"/>
    </form>
</div>