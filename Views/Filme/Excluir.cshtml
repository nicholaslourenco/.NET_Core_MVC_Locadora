@model Filme

<h1>ALERTA!</h1>
<h2>Tem certeza que deseja Excluir o Filme @Model.Nome?</h2>
<p>A exclusão é irreversível!</p>

<form asp-action="Excluir" method="POST">
    <input type="hidden" name="id" value="@Model.Id">

    <input name="decisao" type="submit" value="CANCELAR">
    <input name="decisao" type="submit" value="EXCLUIR">
</form>